<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verification.VerificationActivity">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:outlineAmbientShadowColor="@color/Primary_color"
        android:background="@drawable/verification_background">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_path_35"
            app:tint="#FFFFFF" />
    </RelativeLayout>

    <TextView
        android:id="@+id/enter_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="-1dp"
        android:text="Enter code"
        android:textColor="#000000"
        android:textSize="35dp" />

    <RelativeLayout
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_code"
        android:layout_marginTop="-15dp">

        <TextView
            android:id="@+id/send_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:text="sent to "
            android:textColor="#000000"
            android:textSize="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/send_to"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="your email"
            android:textColor="#A740E4"
            android:textSize="35dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Lorem Ipsum is simply dummy text of the printing"
        android:textColor="#1E0C00"
        android:textSize="12dp" />
    <LinearLayout
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/login_edittext_background">

            <EditText
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:background="@null"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLength="1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/login_edittext_background">

            <EditText
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:background="@null"
                android:inputType="number"
                android:maxLength="1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/login_edittext_background">

            <EditText
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:background="@null"
                android:inputType="number"
                android:maxLength="1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/login_edittext_background">

            <EditText
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:background="@null"
                android:inputType="number"
                android:maxLength="1" />

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/resend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center">

        <TextView
            android:id="@+id/otp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Didn't receive code? "
            android:textColor="#1E0C00"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/otp_text"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/resend"
            android:textColor="#A740E4"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="350dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/resend_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dial_pad_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="7"
                        android:textAlignment="center"
                        android:textColor="@color/Primary_color2"

                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="8"
                        android:textColor="@color/Primary_color2"

                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="9"

                        android:textColor="@color/Primary_color2"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="4"
                        android:textAlignment="center"
                        android:textColor="@color/Primary_color2"

                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="5"
                        android:textColor="@color/Primary_color2"

                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="6"

                        android:textColor="@color/Primary_color2"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/Primary_color2"

                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="2"
                        android:textColor="@color/Primary_color2"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="3"

                        android:textColor="@color/Primary_color2"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/Primary_color2"
                        android:textStyle="bold"

                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLength="1"
                        android:text="0"
                        android:textColor="@color/Primary_color2"

                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:onClick="profile">

                    <ImageView
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_onboarding_button"
                        android:textColor="@color/Primary_color2"
                        android:textStyle="bold"
                        app:tint="@color/Primary_color2" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>